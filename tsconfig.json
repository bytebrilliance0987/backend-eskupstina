{
    "compilerOptions": {
      "target": "es5",                          
      "module": "commonjs",                    
      "lib": [
        "dom",
        "ES5",
        "ES6",
        "ESNext",
        "ES2015",
        "es2020"
    ],                  
      "allowJs": true,
      "outDir": "build",                          
      "rootDir": "src",
      "strict": true,         
      "noImplicitAny": true,
      "esModuleInterop": true,
      "resolveJsonModule": true
    },
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "exclude": ["node_modules", "build", "dist", "src/@types"]
  }